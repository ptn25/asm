<body class="text-bg-dark">
    <div class="container mt-3">
        <nav class="navbar navbar-expand-sm">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <img src="https://cdn-icons-png.flaticon.com/128/2133/2133049.png" alt="Logo" style="width:40px;"
                        class="rounded-pill">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mynavbar">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/view">Product</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/new">Add new Product</a>
                        </li>
                    </ul>
                    <form class="d-flex" action="/search" method="post">
                        <input class="form-control me-2" type="text" placeholder="Search" name="txtName">
                        <input class="btn btn-primary" type="submit" value="Search">
                    </form>
                </div>
            </div>
        </nav>
    </div>
    <div class="container mt-3">
        <h2>Edit Product</h2>
        <form action="/edit" method="post">
            <input type="hidden" name="id" value="{{product._id}}">
            <div class="mb-3 mt-3">
                <label for="txtName">Product Name:</label>
                <input type="text" class="form-control" name="txtName" value="{{product.name}}">
            </div>
            <div class="mb-3">
                <label for="txtPrice">Price:</label>
                <input type="text" class="form-control" name="txtPrice" value="{{product.price}}">
            </div>
            <div class="mb-3">
                <label for="txtPic">Picture URL:</label>
                <input type="text" class="form-control" name="txtPic" value="{{product.picture}}">
            </div>
            <div class="mb-3">
                <label for="txtCategory">Category:</label>
                <input type="text" class="form-control" name="txtCategory" value="{{product.category}}">
            </div>
            <input class="btn btn-warning" type="submit" value="Update">
        </form>
